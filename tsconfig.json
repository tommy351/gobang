{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": false,
    "alwaysStrict": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}